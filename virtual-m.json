{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": ""
        },
        "vmName": {
            "type": "string",
            "defaultValue": "vmName"    
        },
        "adminUsername": {
            "type": "string",
            "defaultValue": "sysgain"
        },
        "adminPasswordOrSshKey": {
            "type": "securestring",
            "defaultValue": "Sysga1n4205!"
        }   
      },
    "variables": {
        "vmSize":"Standard_D2",
        "imagePublisher":"Canonical",
         "imageOffer":"windows",
          "imageSKU":"15.10",
           "imageVersion":"latest",
             "networkInterfaceName":"SuNic",
              "vmStorageAccountContainerName":"suVmc"
    },
    "resources": [
        {
            "apiVersion":"2015-06-15",
            "type": "Microsoft.Compute/virtualMachines",
            "name": "Vmsetup",
            "location": "[parameters('location')]",
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[variables('vmSize')]"
                },
                "osProfile": {
                    "computerName": "[parameters('vmName')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPasswordOrSshKey')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[variables('imagePublisher')]",
                        "offer": "[variables('imageOffer')]",
                        "sku": "[variables('imageSKU')]",
                        "version": "[variables('imageVersion')]"
                    },
                    "osDisk": {
                        "name": "[concat(parameters('vmName'),'-osDisk')]",
                         "vhd": {
                            "uri": "[concat('https://',variables('storageAccountName'),'.blob.core.windows.net/',variables('vmStorageAccountContainerName'),'/',parameters('vmName'),'-osdisk.vhd')]"
                        },
                        "caching": "ReadWrite",
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('networkInterfaceName'))]"
                        }
                    ]
                }
            }
        }
    ]
}
